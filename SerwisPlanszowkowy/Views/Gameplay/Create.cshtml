@model SerwisPlanszowkowy.ViewModels.GameplayCreateEditViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Add new gameplay</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PublishedDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PublishedDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "date" })
                @Html.ValidationMessageFor(model => model.PublishedDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GameId, "Game", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownGroupListFor(model => model.GameId, Model.Games, "Choose game", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GameId)
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "UserGamePlays", "Account")
</div>
@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {

            $("#date").datepicker({
                dateFormat: 'yy-mm-dd',
                minDate: (-365) * 99,
                maxDate: 0,
            });
            $("#date").keypress(function (event) { event.preventDefault(); });
        });
    </script>
}