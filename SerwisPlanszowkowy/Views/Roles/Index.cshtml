@{
    ViewBag.Title = "ManageUserRoles";
}

<h3>Manage User Roles</h3>
<hr />

<h4>Role Add to User</h4>

@using (Html.BeginForm("RoleAddToUser", "Roles"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
  
    <p>
        Username : @Html.TextBox("UserName", null, new { @class = "form-control-inOneLine" })
        Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select", new { @class = "form-control-inOneLine" })

    </p>

    <input type="submit" value="Save" class="btn btn-default" />
}
<hr />
<h4>Get Roles for a User</h4>
@using (Html.BeginForm("GetRoles", "Roles"))
{
    @Html.AntiForgeryToken()
    <p>
        Username : @Html.TextBox("UserName", null, new { @class = "form-control-inOneLine" })
        <input type="submit" value="Get" class="btn btn-default" />
    </p>
}

@if (ViewBag.RolesForThisUser != null)
{

    <h5>Roles for this user </h5>
    <ol>
        @foreach (string s in ViewBag.RolesForThisUser)
        {
            <li>@s</li>
        }
    </ol>

}

<hr />
<h4>Delete A User from a Role</h4>

@using (Html.BeginForm("DeleteRoleForUser", "Roles"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <p>
        Username : @Html.TextBox("UserName",null, new { @class = "form-control-inOneLine" })
        Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select", new { @class = "form-control-inOneLine" })

    </p>

    <input type="submit" value="Delete" class="btn btn-default" />
}
